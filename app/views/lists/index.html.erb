<div class="container">
  <h1 class= "my-3"> Lists </h1>

  <div class="d-flex">
    <div class="cards">
      <% @lists.each do |list|%>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3))">
          <%= link_to list.name, list_path(list), style: "text-decoration: none" %>
        </div>
      <% end %>
    </div>
    <div class="px-5">
      <%= link_to "Add a new list", new_list_path, class: "btn btn-gradient" %>
    </div>
  </div>
</div>
